{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@botui/components": ["libs/components/src/index.ts"],
      "@botui/hooks": ["libs/hooks/src/index.ts"],
      "@botui/api": ["libs/api/src/index.ts"],
      "@botui/chat-controller": ["libs/chat-controller/src/index.ts"],
      "@botui/chat-controller/client": [
        "libs/chat-controller/src/client/index.ts"
      ],
      "@botui/chat-controller/common": [
        "libs/chat-controller/src/common/index.ts"
      ],
      "@botui/types": ["libs/types/src/index.d.ts"],
      "@botui/graphql": ["libs/graphql/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
